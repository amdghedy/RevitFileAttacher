<Window x:Class="RevitAddin.FolderSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Folder" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Name="FolderPathTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Center" IsReadOnly="True"/>
        <Button Name="BrowseButton" Grid.Row="1" Margin="10" Padding="5" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Browse" Click="BrowseButton_Click" />
        <Button Name="AttachButton" Grid.Row="2" Margin="10" Padding="5" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Attach" Click="AttachButton_Click" />
    </Grid>
</Window>
